lockout_check {
# checks for 5 failed auths in the last 10 minutes
	update control {
		Tmp-Integer-0 := "%{sql:select count(1) from acc_auth_reject where username='%{User-Name}' and calling_station_id='%{Calling-Station-Id}' and reject_time < now() - interval 5 minute}"
	}
	if (control:Tmp-Integer-0 > 5) {
		reject
	}
}

lockout_incr {
	update control {
		Tmp-Integer-0 := "%{sql:insert into acc_auth_reject set username='%{User-Name}', calling_station_id='%{Calling-Station-Id}'}"
	}
}
